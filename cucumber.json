{
    "default": {
        "compilerOptions": {
            "esModuleInterop": true,
            "resolveJsonModule": false
        },
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/test/feature/"
        ],
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/test/hooks/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "html:cucumber-report.html"
        ]
    }
}